<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Tỏ Tình 3D</title>
  <style>
    body {
      margin: 0;
      background: black;
      overflow: hidden;
      perspective: 1000px;
      touch-action: none;
    }
    .scene {
      width: 100vw;
      height: 100vh;
      transform-style: preserve-3d;
      transform: rotateX(0deg) rotateY(0deg);
      position: relative;
    }
    .letter {
      position: absolute;
      font-size: 24px;
      color: #ff4081;
      font-family: 'Arial', sans-serif;
      transform-style: preserve-3d;
      animation: fall 15s linear forwards;
    }
    @keyframes fall {
      0% {
        transform: translateY(-100vh);
        opacity: 0;
      }
      10% {
        opacity: 1;
      }
      100% {
        transform: translateY(100vh);
        opacity: 0.8;
      }
    }
    #qrcode {
      position: absolute;
      bottom: 20px;
      left: 20px;
      background: white;
      padding: 8px;
      border-radius: 12px;
    }
  </style>
</head>
<body>
  <div class="scene" id="scene"></div>
  <canvas id="qrcode"></canvas>

  <!-- QR Code Library -->
  <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>

  <script>
    const scene = document.getElementById('scene');
    const text = "Anh yêu em ❤️";
    const letters = [];

    function createLetters() {
      scene.innerHTML = '';
      letters.length = 0;
      for (let i = 0; i < text.length; i++) {
        const span = document.createElement('span');
        span.className = 'letter';
        span.innerText = text[i];
        span.style.left = Math.random() * window.innerWidth + 'px';
        span.style.top = Math.random() * -200 + 'px';
        span.style.animation = 'fall 15s linear forwards';
        span.style.animationDelay = (Math.random() * 2) + 's';
        scene.appendChild(span);
        letters.push(span);
      }
    }

    function formHeart() {
      letters.forEach((el, i) => {
        const angle = i * (2 * Math.PI / letters.length);
        const x = 160 * Math.sin(angle) * (1 - Math.abs(Math.cos(angle)));
        const y = -160 * Math.cos(angle);
        const z = 60 * Math.sin(i);

        el.style.transition = 'transform 2s ease, opacity 2s';
        el.style.transform = `translate3d(${x}px, ${y}px, ${z}px)`;
        el.style.opacity = 1;
      });

      // Sau 5s → reset và lặp lại
      setTimeout(() => {
        createLetters();
        setTimeout(formHeart, 15000); // Lặp tiếp sau 15s
      }, 5000);
    }

    createLetters();
    setTimeout(formHeart, 15000); // Lần đầu sau 15s

    // Điều khiển xoay 3D
    let rotateX = 0, rotateY = 0;
    let lastX, lastY, isDragging = false;

    function updateRotation() {
      scene.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
    }

    // Chuột
    document.addEventListener('mousedown', e => {
      isDragging = true;
      lastX = e.clientX;
      lastY = e.clientY;
    });
    document.addEventListener('mouseup', () => isDragging = false);
    document.addEventListener('mousemove', e => {
      if (isDragging) {
        const dx = e.clientX - lastX;
        const dy = e.clientY - lastY;
        rotateY += dx * 0.5;
        rotateX -= dy * 0.5;
        updateRotation();
        lastX = e.clientX;
        lastY = e.clientY;
      }
    });

    // Cảm ứng
    document.addEventListener('touchstart', e => {
      if (e.touches.length === 1) {
        lastX = e.touches[0].clientX;
        lastY = e.touches[0].clientY;
      }
    });
    document.addEventListener('touchmove', e => {
      if (e.touches.length === 1) {
        const dx = e.touches[0].clientX - lastX;
        const dy = e.touches[0].clientY - lastY;
        rotateY += dx * 0.5;
        rotateX -= dy * 0.5;
        updateRotation();
        lastX = e.touches[0].clientX;
        lastY = e.touches[0].clientY;
      }
    });

    // QR Code dựa trên chính URL của trang hiện tại
    const currentURL = location.href;
    QRCode.toCanvas(document.getElementById('qrcode'), currentURL, function (error) {
      if (error) console.error(error);
      console.log("QR đã tạo thành công");
    });
  </script>
</body>
</html>
